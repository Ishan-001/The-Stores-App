<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:paddingStart="45dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="45dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_shop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:lineHeight="22sp"
            android:text="Holla!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:lineHeight="30sp"
            android:text="Welcome to The Stores App"
            android:textColor="#595858"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            android:text="Please enter the required fields\nin order to proceed."/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:layout_marginTop="30dp"
            android:textColorHint="@color/colorPrimaryDark"
            app:hintTextColor="@color/colorPrimaryDark">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/email_input"
                android:fontFamily="@font/roboto_medium"
                android:backgroundTint="@color/colorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            app:hintTextColor="@color/colorPrimaryDark">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/name"
                android:fontFamily="@font/roboto_medium"
                android:backgroundTint="@color/colorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:textColorHint="@color/colorPrimaryDark"
            app:hintTextColor="@color/colorPrimaryDark"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimaryDark">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pass_input"
                android:fontFamily="@font/roboto_medium"
                android:inputType="textPassword"
                android:backgroundTint="@color/colorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/customer_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer"
                android:checked="true"
                android:textSize="16sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/seller_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Owner"
                android:textSize="16sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimaryDark"/>

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            app:hintTextColor="@color/colorPrimaryDark">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/phone"
                android:fontFamily="@font/roboto_medium"
                android:backgroundTint="@color/colorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"
            android:text="* Enter a valid phone number"
            android:textColor="@android:color/holo_red_dark"
            android:fontFamily="@font/roboto_medium"
            android:id="@+id/prompt"
            android:visibility="gone"/>

        <Button
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/white"
            android:text="Register"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:id="@+id/register_btn"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/button_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text=" or "/>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#000000"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4E4D4D"
                android:text="Already have an account?"
                android:id="@+id/t1"
                android:fontFamily="@font/roboto_medium"
                android:textSize="12sp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text=" Login\n"
            android:fontFamily="@font/roboto_medium"
            android:layout_toRightOf="@+id/t1"
            android:textSize="12sp"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>